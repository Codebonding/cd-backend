{
   "compilerOptions": {
     "target": "ES6",
     "module": "CommonJS",
     "strict": true,
     "esModuleInterop": true,
     "skipLibCheck": true,
     "experimentalDecorators": true,
     "emitDecoratorMetadata": true,
     "outDir": "./dist",
     "resolveJsonModule": true,
     "baseUrl": "./src",
    "paths": {
      "repo/*": ["./repo/*"]
    },
   },
   "include": ["src/**/*", "src/index.ts"],
   "exclude": ["node_modules"]
 }
 